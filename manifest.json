{
  "manifest_version": 2,
  "name": "fanyi sidebar",
  "description": "Chrome extension to show sidebar on web page",
  "version": "0.0.1",
  "options_page": "page.html?page=settings",
  "permissions": [
    "management",
    "*://*/*",
    "activeTab",
    "tabs",
    "contextMenus",
    "webRequest",
    "system.display",
    "storage"
  ],
  "browser_action": {
    "default_icon": "img/favicon.png",
    "default_title": "fanyi sidebar",
    "default_popup": "option/options.html"
  },
  "icons": {
    "24": "img/favicon.png",
    "64": "img/favicon64.png"
	},
  "background": {
    "scripts": [
      "js/common.js",
      "js/background_resize.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file:///*/*"
      ],
      "all_frames": false,
      "run_at": "document_end",
      "js": [
        "js/lib/jquery-1.10.1.min.js",
        "js/lib/async.js",
        "js/common.js",
        "js/contentscript.js"
      ],
      "css": [
        "css/contentscript.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "page.html"
  ],
  "commands": {
    "open-fanyi-on-right": {
      "description": "open new fanyi on right",
      "suggested_key": {
        "default": "Alt+Shift+2",
        "mac": "MacCtrl+Shift+2"
      }
    },
    "open-work-table": {
      "description": "open work table",
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "MacCtrl+Shift+1"
      }
    },
    "show-fanyi-inpage": {
      "description": "show fanyi in current page",
      "suggested_key": {
        "default": "Alt+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      }
    }
  }
}