{
  "manifest_version": 2,
  "name": "fanyi sidebar",
  "description": "Chrome extension to show sidebar on web page",
  "version": "0.0.1",
  "options_page": "page.html?page=settings",
  "permissions": [
    "management",
    "*://*/*",
    "activeTab",
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "browser_action": {
    "default_icon": "img/favicon.png",
    "default_title": "fanyi sidebar"
  },
  "icons": {
    "24": "img/favicon.png",
    "64": "img/favicon64.png"
	},
  "background": {
    "scripts": [
      "js/lib/jquery-1.10.1.min.js",
      "js/lib/bootstrap.js",
      "js/lib/async.js",
      "js/common.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": [
        "js/lib/jquery-1.10.1.min.js",
        "js/lib/async.js",
        "js/common.js",
        "js/contentscript.js"
      ],
      "css": [
        "css/contentscript.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "page.html"
  ],
  "commands": {
    "test": {
      "description": "test hotkey",
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      }
    }
  }
}