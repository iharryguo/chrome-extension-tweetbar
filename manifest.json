{
  "manifest_version": 2,
  "name": "fanyi sidebar",
  "description": "Chrome extension to show relevant tweets while browsing YouTube",
  "version": "0.0.1",
  "options_page": "page.html?page=settings",
  "permissions": [
	"tabs",
	"webRequest",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

	"page_action": {
		"default_icon": "img/bird.png",
		"default_title": "fanyi sidebar"
	},

  "background": {
  	"scripts": [
	    "js/lib/jquery-1.10.1.min.js",
	    "js/lib/bootstrap.js",
	    "js/lib/async.js",
	    "js/lib/codebird.js",
	    "js/common.js",
	    "js/store.js",
	    "js/background.js"
  	],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "run_at": "document_end", 
      "js": [
      	"js/lib/jquery-1.10.1.min.js",
	    "js/lib/async.js",
      	"js/common.js", 
      	"js/contentscript.js"
  	  ],
      "css": [
      	"css/contentscript.css"
  	  ]
    }
  ],
  
  "web_accessible_resources": ["page.html"]
}
